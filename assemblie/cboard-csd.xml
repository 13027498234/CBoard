<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>cboard-csd</id>
    <formats>
        <format>tar</format> <!--打包的文件格式,也可以有：tar.gz war zip -->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory> <!--压缩包下是否生成和项目名相同的根目录-->
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/cm/csd/descriptor</directory>
            <outputDirectory>/descriptor</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/cm/csd/images</directory>
            <outputDirectory>/images</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/cm/csd/scripts</directory>
            <outputDirectory>/scripts</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>